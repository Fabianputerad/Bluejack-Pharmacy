<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPage"
    android:orientation="vertical">

<!--    <ImageView-->
<!--        android:id="@+id/gambar_detail"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:paddingTop="110dp"/>-->

    <TextView
        android:id="@+id/txtView_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obat"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:paddingTop="160dp"/>
<!--        android:layout_below="@+id/gambar_detail"-->
        />
    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obat-obatan"
        android:textSize="20dp"
        android:layout_below="@+id/txtView_detail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="20dp"
        android:layout_below="@+id/deskripsi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/edt_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/deskripsi"
        android:layout_toEndOf="@+id/quantity"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_detail"
        android:layout_marginTop="50dp"/>
</RelativeLayout>