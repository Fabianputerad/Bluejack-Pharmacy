<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/android_small___2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SignUp_text"
        android:text="Sign Up"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="25dp"/>

    <EditText
        android:id="@+id/UsernameRegis_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SignUp_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EmailRegis_edit"
        android:hint="Email"
        android:layout_below="@id/UsernameRegis_edit"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/button_shape"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PasswordRegis_edit"
        android:hint="Password"
        android:layout_below="@id/EmailRegis_edit"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/button_shape"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/ConfirmPasswordRegis_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PasswordRegis_edit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_shape"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


        <Button
            android:id="@+id/regisbuttonpage"
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="120dp"
            android:layout_below="@id/ConfirmPasswordRegis_edit"
            android:background="@drawable/button_color"
            android:text="Sign Up"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />

    <Button
        android:id="@+id/loginbtn_signUp"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:background="@drawable/button_shape"
        android:text="Already Have an Acc?"
        android:layout_below="@+id/regisbuttonpage"
        android:layout_marginLeft="275dp"
        android:textSize="10dp"
        />


</RelativeLayout>